<!-- Footer -->
<footer class="bg-dark text-white text-center py-4 mt-auto">
  <div class="container">
    <p class="mb-1">
      &copy; <%= new Date().getFullYear() %> Our Blog. All rights reserved.
    </p>
    <div>
      <a href="/" class="text-white me-3 text-decoration-none">Home</a>
      <a href="/posts" class="text-white me-3 text-decoration-none">Posts</a>
      <% if (!user) { %>
      <a href="/auth/login" class="text-white me-3 text-decoration-none"
        >Login</a
      >
      <a href="/auth/register" class="text-white text-decoration-none"
        >Register</a
      >
      <% } else { %>
      <a href="/user/profile" class="text-white me-3 text-decoration-none"
        >Profile</a
      >
      <a href="/auth/logout" class="text-white text-decoration-none">Logout</a>
      <% } %>
    </div>
  </div>
