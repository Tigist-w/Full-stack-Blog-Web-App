<%- include('partials/header', { title, user }) %>

<div class="container my-5">
  <h2 class="text-center fw-bold mb-4">
    All Posts <span class="text-muted">[ <%= posts.length %> ]</span>
  </h2>

  <% if (posts.length > 0) { %>
  <div class="row g-4">
    <% posts.forEach(post => { %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm border-0 transition">
        <% if (post.images && post.images.length > 0) { %>
        <img
          src="<%= post.images[0].url %>"
          class="card-img-top"
          alt="Post Image"
          style="height: 200px; object-fit: cover"
        />
        <% } %>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-2">
            <%= post.title.length > 60 ? post.title.substring(0, 60) + '...' :
            post.title %>
          </h5>

          <p class="text-muted small mb-2">
            by <%= post.author.username %> â€¢ <%= post.createdAt.toDateString()
            %>
          </p>

          <% if (post.tags && post.tags.length > 0) { %>
          <div class="mb-2">
            <% post.tags.forEach(tag => { %>
            <span class="badge bg-secondary me-1"><%= tag %></span>
            <% }) %>
          </div>
          <% } %>

          <a
            href="/posts/<%= post._id %>"
            class="btn btn-outline-primary btn-sm mt-auto"
          >
            Read More
          </a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <div class="alert alert-info text-center mt-5">No posts available.</div>
  <% } %>
</div>

<%- include('partials/footer') %>
<style>
  .transition {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .transition:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }
  .card-img-top {
    border-radius: 0.25rem;
  }
</style>
